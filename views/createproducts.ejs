<%- include('./partials/header') %>

<% if(success && success.length > 0){ %>
<div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500">
  <span class="inline-block mt-1 mb-1 text-white">
    <%= success %>
  </span>
</div>
<% } %>

<% if(error && error.length > 0){ %>
<div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
  <span class="inline-block mt-1 mb-1 text-white">
    <%= error %>
  </span>
</div>
<% } %>

<div class="min-h-screen flex flex-col">
    <div class="container px-10 py-20 flex flex-grow">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2"  href="/shop">All Products</a>
                <a class="block w-fit mb-2" href="/owners/product/create">Create new product</a>
            </div>
        </div>
        <main class="w-3/4 bg-white p-8 shadow ml-4">
            <h2 class="text-xl font-bold mb-4">Create New Products</h2>
            <form action="/owners/product/create" method="POST" enctype="multipart/form-data">
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-2">Products Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 font-medium" for="image">Product Image</label>
                        <input name = "image" type="file" class="py-2 px-4 rounded" id="image" required value="Select File">
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <input type="text" placeholder="Product Name" name="name" id="name" required class="border p-2 rounded w-full">
                        <input type="number" placeholder="Product Price" name="price" id="price" required class="border p-2 rounded w-full">
                        <input type="number" placeholder="Discount Price" name="discount" id="discount" class="border p-2 rounded w-full">
                        <input type="number" placeholder="Quantity" name="quantity" id="quantity" required class="border p-2 rounded w-full">
                        <select name="category" id="category" required class="border p-2 rounded w-full">
                            <option value="">Select Category</option>
                            <option value="handbags">Handbags</option>
                            <option value="backpacks">Backpacks</option>
                            <option value="wallets">Wallets</option>
                            <option value="travel">Travel Bags</option>
                            <option value="accessories">Accessories</option>
                        </select>
                        <textarea placeholder="Product Description" name="description" id="description" class="border p-2 rounded w-full col-span-2" rows="3"></textarea>         
                    </div>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-2">Panel Details</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <input type="text" placeholder="Background Color" name="bgcolor" id="bgcolor" class="border p-2 rounded w-full">
                        <input type="text" placeholder="Panel Color" name="panelcolor" id="panelcolor" class="border p-2 rounded w-full">
                        <input type="text" placeholder="Text Color" name="textcolor" id="textcolor" class="border p-2 rounded w-full">                        
                    </div>
                </div>
                <input class="px-5 py-2 rounded mt-3 bg-blue-500 text-white cursor-pointer hover: bg-blue-600" type="submit" value="Create New Product"> 
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>