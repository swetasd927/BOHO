<%- include('./partials/header') %>

<!-- Success/Error Messages -->
<% if(typeof success !== 'undefined' && success && success.length > 0) { %>
<div class="fixed top-4 right-4 z-50 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg animate-slide-in" id="successMessage">
  <div class="flex items-center">
    <i class="ri-check-circle-line mr-2"></i>
    <%= success %>
  </div>
</div>
<% } %>

<% if(typeof error !== 'undefined' && error && error.length > 0) { %>
<div class="fixed top-4 right-4 z-50 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg animate-slide-in" id="errorMessage">
  <div class="flex items-center">
    <i class="ri-error-warning-line mr-2"></i>
    <%= error %>
  </div>
</div>
<% } %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Page Header -->
    <div class="bg-white rounded-xl shadow-sm p-6 mb-8">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
            <% if(user.picture) { %>
              <img src="<%= user.picture %>" alt="Profile" class="w-16 h-16 rounded-full object-cover">
            <% } else { %>
              <i class="ri-user-line text-2xl text-white"></i>
            <% } %>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Welcome, <%= user.fullname || 'User' %></h1>
            <p class="text-gray-600"><%= user.email %></p>
          </div>
        </div>
        <div class="flex space-x-3">
          <a href="/shop" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors flex items-center">
            <i class="ri-shopping-bag-line mr-2"></i>
            Continue Shopping
          </a>
          <a href="/cart" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-colors flex items-center">
            <i class="ri-shopping-cart-line mr-2"></i>
            Cart (<%= cartCount %>)
          </a>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Account Stats -->
      <div class="lg:col-span-3">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <!-- Total Orders -->
          <div class="bg-white rounded-xl shadow-sm p-6 text-center">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <i class="ri-shopping-bag-line text-xl text-blue-600"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-900"><%= orderStats.totalOrders %></h3>
            <p class="text-gray-600">Total Orders</p>
          </div>

          <!-- Total Spent -->
          <div class="bg-white rounded-xl shadow-sm p-6 text-center">
            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <i class="ri-money-dollar-circle-line text-xl text-green-600"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-900">Rs. <%= orderStats.totalSpent.toLocaleString() %></h3>
            <p class="text-gray-600">Total Spent</p>
          </div>

          <!-- Cart Items -->
          <div class="bg-white rounded-xl shadow-sm p-6 text-center">
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <i class="ri-shopping-cart-line text-xl text-purple-600"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-900"><%= orderStats.cartItems %></h3>
            <p class="text-gray-600">Items in Cart</p>
          </div>

          <!-- Cart Value -->
          <div class="bg-white rounded-xl shadow-sm p-6 text-center">
            <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <i class="ri-price-tag-3-line text-xl text-orange-600"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-900">Rs. <%= orderStats.cartValue.toLocaleString() %></h3>
            <p class="text-gray-600">Cart Value</p>
          </div>
        </div>
      </div>

      <!-- Profile Information -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow-sm p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-semibold text-gray-900">Profile Information</h2>
            <button onclick="toggleEditMode()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors text-sm">
              <i class="ri-edit-line mr-2"></i>
              <span id="editButtonText">Edit Profile</span>
            </button>
          </div>

          <!-- View Mode -->
          <div id="viewMode" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                <p class="text-gray-900 font-medium"><%= user.fullname || 'Not provided' %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                <p class="text-gray-900 font-medium"><%= user.email %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Contact Number</label>
                <p class="text-gray-900 font-medium"><%= user.contact || 'Not provided' %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Member Since</label>
                <p class="text-gray-900 font-medium"><%= new Date(user._id.getTimestamp()).toLocaleDateString() %></p>
              </div>
            </div>
          </div>

          <!-- Edit Mode -->
          <div id="editMode" class="hidden">
            <form method="POST" action="/updateprofile" class="space-y-4">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="fullname" class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                  <input type="text" id="fullname" name="fullname" value="<%= user.fullname || '' %>" 
                         class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                  <input type="email" value="<%= user.email %>" disabled 
                         class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100 text-gray-500">
                  <p class="text-xs text-gray-500 mt-1">Email cannot be changed</p>
                </div>
                <div>
                  <label for="contact" class="block text-sm font-medium text-gray-700 mb-2">Contact Number</label>
                  <input type="tel" id="contact" name="contact" value="<%= user.contact || '' %>" 
                         class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>
              </div>
              <div class="flex space-x-3 pt-4">
                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg transition-colors">
                  <i class="ri-save-line mr-2"></i>
                  Save Changes
                </button>
                <button type="button" onclick="toggleEditMode()" class="bg-gray-600 hover:bg-gray-700 text-white px-6 py-2 rounded-lg transition-colors">
                  <i class="ri-close-line mr-2"></i>
                  Cancel
                </button>
              </div>
            </form>
          </div>
        </div>

        <!-- Recent Cart Items -->
        <div class="bg-white rounded-xl shadow-sm p-6 mt-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Items in Your Cart</h2>
          <% if(user.cart && user.cart.length > 0) { %>
            <div class="space-y-4">
              <% user.cart.slice(0, 3).forEach(function(item){ %>
                <% if(item.product) { %>
                <div class="flex items-center space-x-4 p-4 bg-gray-50 rounded-lg">
                  <div class="w-16 h-16 bg-[<%= item.product.bg_color || '#f0f0f0' %>] rounded-lg flex items-center justify-center">
                    <% if(item.product.image) { %>
                      <img src="data:image/jpeg;base64,<%= item.product.image.toString('base64') %>" 
                           alt="<%= item.product.name %>" class="w-12 h-12 object-contain">
                    <% } else { %>
                      <i class="ri-image-line text-gray-400"></i>
                    <% } %>
                  </div>
                  <div class="flex-1">
                    <h4 class="font-medium text-gray-900"><%= item.product.name %></h4>
                    <p class="text-gray-600">Quantity: <%= item.quantity || 1 %></p>
                    <p class="text-green-600 font-medium">Rs. <%= ((item.product.price || 0) - (item.product.discount || 0)) * (item.quantity || 1) %></p>
                  </div>
                </div>
                <% } %>
              <% }); %>
              <% if(user.cart.length > 3) { %>
              <p class="text-center text-gray-600">And <%= user.cart.length - 3 %> more items...</p>
              <% } %>
              <a href="/cart" class="block text-center bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg transition-colors">
                View Full Cart
              </a>
            </div>
          <% } else { %>
            <div class="text-center py-8">
              <i class="ri-shopping-cart-line text-4xl text-gray-300 mb-4"></i>
              <p class="text-gray-600 mb-4">Your cart is empty</p>
              <a href="/shop" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg transition-colors inline-block">
                Start Shopping
              </a>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Quick Actions</h2>
          <div class="space-y-4">
            <a href="/shop" class="block w-full bg-blue-600 hover:bg-blue-700 text-white py-3 px-4 rounded-lg transition-colors text-center">
              <i class="ri-shopping-bag-line mr-2"></i>
              Browse Products
            </a>
            <a href="/cart" class="block w-full bg-green-600 hover:bg-green-700 text-white py-3 px-4 rounded-lg transition-colors text-center">
              <i class="ri-shopping-cart-line mr-2"></i>
              View Cart
            </a>
            <% if(user.cart.length > 0) { %>
            <a href="/clearcart" onclick="return confirm('Are you sure you want to clear your cart?')" 
               class="block w-full bg-orange-600 hover:bg-orange-700 text-white py-3 px-4 rounded-lg transition-colors text-center">
              <i class="ri-delete-bin-line mr-2"></i>
              Clear Cart
            </a>
            <% } %>
            <a href="/logout" onclick="return confirm('Are you sure you want to logout?')" 
               class="block w-full bg-red-600 hover:bg-red-700 text-white py-3 px-4 rounded-lg transition-colors text-center">
              <i class="ri-logout-box-line mr-2"></i>
              Logout
            </a>
          </div>
        </div>

        <!-- Account Security -->
        <div class="bg-white rounded-xl shadow-sm p-6 mt-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Account Security</h2>
          <div class="space-y-4">
            <div class="flex items-center justify-between p-4 bg-green-50 rounded-lg">
              <div class="flex items-center">
                <i class="ri-shield-check-line text-green-600 mr-3"></i>
                <span class="text-green-800 font-medium">Account Verified</span>
              </div>
              <i class="ri-check-line text-green-600"></i>
            </div>
            <button class="w-full bg-gray-600 hover:bg-gray-700 text-white py-2 px-4 rounded-lg transition-colors text-sm">
              <i class="ri-lock-line mr-2"></i>
              Change Password
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function toggleEditMode() {
    const viewMode = document.getElementById('viewMode');
    const editMode = document.getElementById('editMode');
    const buttonText = document.getElementById('editButtonText');
    
    if (viewMode.classList.contains('hidden')) {
      // Currently in edit mode, switch to view mode
      viewMode.classList.remove('hidden');
      editMode.classList.add('hidden');
      buttonText.textContent = 'Edit Profile';
    } else {
      // Currently in view mode, switch to edit mode
      viewMode.classList.add('hidden');
      editMode.classList.remove('hidden');
      buttonText.textContent = 'Cancel Edit';
    }
  }

  // Auto-hide messages
  function autoHideMessage(messageId, delay = 5000) {
    const message = document.getElementById(messageId);
    if (message) {
      setTimeout(() => {
        message.style.transform = 'translateX(100%)';
        message.style.opacity = '0';
        setTimeout(() => {
          message.remove();
        }, 300);
      }, delay);
    }
  }

  document.addEventListener('DOMContentLoaded', function() {
    autoHideMessage('successMessage');
    autoHideMessage('errorMessage');
  });
</script>

<style>
  @keyframes slideIn {
    from { opacity: 0; transform: translateX(100%); }
    to { opacity: 1; transform: translateX(0); }
  }
  
  .animate-slide-in {
    animation: slideIn 0.3s ease-out forwards;
  }
</style>

<%- include('./partials/footer') %>