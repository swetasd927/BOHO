<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BOHO - Admin Login</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .form-input {
            transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            border: 2px solid rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.9);
        }
        .form-input:focus {
            border-color: #3b82f6;
            background: rgba(255, 255, 255, 1);
            box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
            transform: translateY(-2px);
        }
        .btn-primary {
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #1d4ed8 0%, #1e40af 100%);
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.4);
        }
        .floating-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }
        .shape {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: float 6s ease-in-out infinite;
        }
        .shape:nth-child(1) {
            width: 80px;
            height: 80px;
            top: 10%;
            left: 10%;
            animation-delay: 0s;
        }
        .shape:nth-child(2) {
            width: 60px;
            height: 60px;
            top: 20%;
            right: 10%;
            animation-delay: 2s;
        }
        .shape:nth-child(3) {
            width: 100px;
            height: 100px;
            bottom: 10%;
            left: 15%;
            animation-delay: 4s;
        }
        .shape:nth-child(4) {
            width: 40px;
            height: 40px;
            bottom: 20%;
            right: 20%;
            animation-delay: 1s;
        }
        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(180deg); }
        }
    </style>
</head>
<body class="bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900 min-h-screen flex items-center justify-center p-4 relative">
    <!-- Floating Shapes Background -->
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="w-full max-w-lg">
        <!-- Brand Header -->
        <div class="text-center mb-8">
            <div class="glass-effect rounded-2xl p-6 mb-6">
                <i class="ri-shopping-bag-3-fill text-6xl text-white mb-4 block"></i>
                <h1 class="text-2xl font-bold text-white">BOHO</h1>
                <p class="text-indigo-200 mt-2">Admin Access Portal</p>
            </div>
        </div>

        <!-- Login Card -->
        <div class="glass-effect rounded-3xl shadow-2xl overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-8 py-8 text-center relative">
                <div class="absolute inset-0 bg-gradient-to-r from-indigo-600/80 to-purple-600/80"></div>
                <div class="relative z-10">
                    <i class="ri-shield-admin-fill text-5xl text-white mb-4 block"></i>
                    <h2 class="text-3xl font-bold text-white">Admin Login</h2>
                    <p class="text-indigo-100 mt-2">Welcome back, Administrator</p>
                </div>
            </div>

            <!-- Form Content -->
            <div class="p-8 bg-white/95 backdrop-blur-lg">
                <% if(error && error.length > 0) { %>
                    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-lg mb-6">
                        <div class="flex items-center">
                            <i class="ri-error-warning-line text-red-400 mr-2"></i>
                            <p class="text-red-700 font-medium"><%= error[0] %></p>
                        </div>
                    </div>
                <% } %>

                <form method="POST" action="/owners/login" class="space-y-6">
                    <!-- Email Field -->
                    <div>
                        <label class="flex items-center text-gray-700 font-semibold mb-3">
                            <i class="ri-mail-line mr-2 text-indigo-600"></i>
                            Email Address
                        </label>
                        <input type="email" 
                               name="email" 
                               required 
                               placeholder="admin@example.com"
                               class="form-input w-full px-4 py-4 rounded-xl outline-none">
                    </div>

                    <!-- Password Field -->
                    <div>
                        <label class="flex items-center text-gray-700 font-semibold mb-3">
                            <i class="ri-lock-line mr-2 text-indigo-600"></i>
                            Password
                        </label>
                        <input type="password" 
                               name="password" 
                               required 
                               placeholder="••••••••"
                               class="form-input w-full px-4 py-4 rounded-xl outline-none">
                    </div>

                    <!-- Login Button -->
                    <button type="submit" class="btn-primary w-full py-4 rounded-xl text-white font-bold text-lg shadow-lg">
                        <i class="ri-login-circle-line mr-2"></i>
                        Sign In to Dashboard
                    </button>
                </form>

                <!-- Footer Links -->
                <div class="mt-8 text-center space-y-4">
                    <div class="flex items-center justify-center space-x-2 text-gray-500">
                        <div class="h-px bg-gray-300 flex-1"></div>
                        <span class="text-sm">New Administrator?</span>
                        <div class="h-px bg-gray-300 flex-1"></div>
                    </div>
                    
                    <a href="/owners/signup" class="inline-flex items-center justify-center w-full py-3 px-4 border-2 border-indigo-200 text-indigo-600 font-semibold rounded-xl hover:bg-indigo-50 transition-all duration-300">
                        <i class="ri-user-add-line mr-2"></i>
                        Create Admin Account
                    </a>
                </div>
            </div>
        </div>

        <!-- Security Notice -->
        <div class="text-center mt-6">
            <p class="text-indigo-200 text-sm flex items-center justify-center">
                <i class="ri-shield-check-line mr-2"></i>
                Secured with industry-standard encryption
            </p>
        </div>
    </div>
</body>
</html>
