<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BOHO - Elegant Bag Shop</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
    
    body {
      font-family: 'Inter', sans-serif;
    }
    
    .glass-effect {
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .gradient-border {
      position: relative;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    
    .gradient-border::before {
      content: '';
      position: absolute;
      inset: 0;
      border-radius: inherit;
      padding: 1px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
      -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      opacity: 0;
      transition: opacity 0.4s ease;
    }
    
    .gradient-border:hover::before {
      opacity: 1;
    }
    
    .floating {
      animation: floating 6s ease-in-out infinite;
    }
    
    @keyframes floating {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      33% { transform: translateY(-15px) rotate(1deg); }
      66% { transform: translateY(-5px) rotate(-1deg); }
    }
    
    .pulse-slow {
      animation: pulse-slow 4s ease-in-out infinite;
    }
    
    @keyframes pulse-slow {
      0%, 100% { opacity: 0.3; transform: scale(1); }
      50% { opacity: 0.6; transform: scale(1.05); }
    }
    
    .glow-effect {
      box-shadow: 0 0 20px rgba(102, 126, 234, 0.3);
      transition: all 0.3s ease;
    }
    
    .glow-effect:hover {
      box-shadow: 0 0 40px rgba(102, 126, 234, 0.6), 0 0 60px rgba(102, 126, 234, 0.4);
      transform: translateY(-2px);
    }
    
    .input-focus {
      transition: all 0.3s ease;
    }
    
    .input-focus:focus {
      transform: translateY(-1px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }
    
    .slide-up {
      animation: slideUp 0.6s ease-out;
    }
    
    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .mesh-gradient {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #f5576c 75%, #4facfe 100%);
      background-size: 400% 400%;
      animation: gradientShift 8s ease infinite;
    }
    
    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
  </style>
</head>
<body class="mesh-gradient min-h-screen relative overflow-x-hidden">

  <!-- Error/Success Messages -->
  <% if(error.length>0){ %>
  <div class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50 p-4 rounded-2xl bg-red-500/90 backdrop-blur-md shadow-2xl max-w-sm mx-4 slide-up">
    <div class="flex items-center">
      <i class="ri-error-warning-line text-white text-lg mr-3"></i>
      <span class="text-white text-sm font-medium"><%= error %></span>
    </div>
  </div>
  <% } %>

  <!-- Animated Background Elements -->
  <div class="absolute top-20 left-10 w-72 h-72 bg-white/20 rounded-full mix-blend-overlay filter blur-xl pulse-slow"></div>
  <div class="absolute top-40 right-10 w-96 h-96 bg-white/30 rounded-full mix-blend-overlay filter blur-2xl pulse-slow" style="animation-delay: 2s;"></div>
  <div class="absolute bottom-20 left-20 w-80 h-80 bg-white/25 rounded-full mix-blend-overlay filter blur-xl pulse-slow" style="animation-delay: 4s;"></div>

  <div class="relative min-h-screen flex items-center justify-center py-8 px-4">
    <div class="max-w-7xl w-full">
      
      <!-- Header Section -->
      <div class="text-center mb-12 floating">
        <div class="inline-block mb-6">
          <div class="w-20 h-20 bg-white/20 backdrop-blur-md rounded-3xl flex items-center justify-center shadow-2xl mx-auto mb-4 glow-effect">
            <i class="ri-shopping-bag-3-line text-3xl text-white"></i>
          </div>
        </div>
        <h1 class="text-5xl lg:text-6xl font-extrabold mb-4 text-white drop-shadow-lg">
          Welcome to <span class="bg-gradient-to-r from-white to-blue-100 bg-clip-text text-transparent">BOHO</span>
        </h1>
        <p class="text-white/80 text-lg font-medium max-w-md mx-auto">Your premium destination for luxury bags and accessories</p>
      </div>

      <!-- Main Authentication Container -->
      <div class="grid lg:grid-cols-2 gap-8 max-w-6xl mx-auto mb-12">
        
        <!-- Create Account Card -->
        <div class="gradient-border rounded-3xl shadow-2xl p-8 transform hover:scale-[1.02] transition-all duration-500 slide-up">
          <div class="mb-8">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-blue-500 rounded-2xl flex items-center justify-center mr-4">
                <i class="ri-user-add-line text-white text-xl"></i>
              </div>
              <div>
                <h2 class="text-2xl font-bold text-gray-800">Create Account</h2>
                <p class="text-gray-600 text-sm">Join our exclusive community</p>
              </div>
            </div>
          </div>
          
          <form action="/users/register" method="POST" class="space-y-6">
            <div class="relative group">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Full Name</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <i class="ri-user-line text-gray-400 group-focus-within:text-purple-500 transition-colors"></i>
                </div>
                <input 
                  type="text" 
                  name="fullname"
                  placeholder="Enter your full name" 
                  class="w-full pl-12 pr-4 py-4 bg-gray-50/80 border-2 border-gray-200 rounded-2xl focus:outline-none focus:border-purple-500 focus:bg-white input-focus transition-all duration-300 text-gray-800"
                  required
                >
              </div>
            </div>
            
            <div class="relative group">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <i class="ri-mail-line text-gray-400 group-focus-within:text-purple-500 transition-colors"></i>
                </div>
                <input 
                  type="email" 
                  name="email"
                  placeholder="Enter your email address" 
                  class="w-full pl-12 pr-4 py-4 bg-gray-50/80 border-2 border-gray-200 rounded-2xl focus:outline-none focus:border-purple-500 focus:bg-white input-focus transition-all duration-300 text-gray-800"
                  required
                >
              </div>
            </div>
            
            <div class="relative group">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <i class="ri-lock-line text-gray-400 group-focus-within:text-purple-500 transition-colors"></i>
                </div>
                <input 
                  type="password" 
                  name="password"
                  placeholder="Create a secure password" 
                  class="w-full pl-12 pr-4 py-4 bg-gray-50/80 border-2 border-gray-200 rounded-2xl focus:outline-none focus:border-purple-500 focus:bg-white input-focus transition-all duration-300 text-gray-800"
                  required
                >
              </div>
            </div>
            
            <button 
              type="submit" 
              class="w-full bg-gradient-to-r from-purple-600 to-blue-600 text-white font-bold py-4 rounded-2xl hover:from-purple-700 hover:to-blue-700 transform hover:scale-[1.02] hover:shadow-2xl transition-all duration-300 glow-effect mt-8"
            >
              <i class="ri-user-add-line mr-2"></i>
              Create My Account
            </button>
          </form>
          
          <div class="mt-6 text-center">
            <p class="text-gray-600">
              Already have an account? 
              <a href="#login" onclick="scrollToLogin()" class="text-purple-600 hover:text-purple-700 font-semibold hover:underline cursor-pointer">Sign in here</a>
            </p>
          </div>
        </div>

        <!-- Login Card -->
        <div class="gradient-border rounded-3xl shadow-2xl p-8 transform hover:scale-[1.02] transition-all duration-500 slide-up" style="animation-delay: 0.2s;" id="login-card">
          <div class="mb-8">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-2xl flex items-center justify-center mr-4">
                <i class="ri-login-circle-line text-white text-xl"></i>
              </div>
              <div>
                <h2 class="text-2xl font-bold text-gray-800">Welcome Back</h2>
                <p class="text-gray-600 text-sm">Sign in to your account</p>
              </div>
            </div>
          </div>
          
          <form action="/users/login" method="POST" class="space-y-6">
            <div class="relative group">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <i class="ri-mail-line text-gray-400 group-focus-within:text-blue-500 transition-colors"></i>
                </div>
                <input 
                  type="email" 
                  name="email"
                  placeholder="Enter your email address" 
                  class="w-full pl-12 pr-4 py-4 bg-gray-50/80 border-2 border-gray-200 rounded-2xl focus:outline-none focus:border-blue-500 focus:bg-white input-focus transition-all duration-300 text-gray-800"
                  required
                >
              </div>
            </div>
            
            <div class="relative group">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <i class="ri-lock-line text-gray-400 group-focus-within:text-blue-500 transition-colors"></i>
                </div>
                <input 
                  type="password" 
                  name="password"
                  placeholder="Enter your password" 
                  class="w-full pl-12 pr-4 py-4 bg-gray-50/80 border-2 border-gray-200 rounded-2xl focus:outline-none focus:border-blue-500 focus:bg-white input-focus transition-all duration-300 text-gray-800"
                  required
                >
              </div>
            </div>
            
            <div class="flex items-center justify-between">
              <label class="flex items-center cursor-pointer group">
                <input type="checkbox" class="w-5 h-5 text-blue-600 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 cursor-pointer">
                <span class="ml-3 text-gray-700 group-hover:text-gray-900 font-medium">Remember me</span>
              </label>
              <a href="#forgot" class="text-blue-600 hover:text-blue-700 font-semibold hover:underline">Forgot Password?</a>
            </div>
            
            <button 
              type="submit" 
              class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-bold py-4 rounded-2xl hover:from-blue-700 hover:to-indigo-700 transform hover:scale-[1.02] hover:shadow-2xl transition-all duration-300 glow-effect mt-8"
            >
              <i class="ri-login-circle-line mr-2"></i>
              Sign In to Account
            </button>
          </form>
          
          <div class="mt-6 text-center">
            <p class="text-gray-600">
              Don't have an account? 
              <a href="#register" onclick="scrollToRegister()" class="text-blue-600 hover:text-blue-700 font-semibold hover:underline cursor-pointer">Create one</a>
            </p>
          </div>
        </div>

      </div>

      <!-- Feature Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-6xl mx-auto">
        <div class="glass-effect rounded-2xl p-6 text-center hover:bg-white/40 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 slide-up">
          <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-xl">
            <i class="ri-award-line text-white text-2xl"></i>
          </div>
          <h3 class="font-bold text-white text-lg mb-2">Premium Quality</h3>
          <p class="text-white/80 text-sm">Handpicked luxury bags from world-renowned brands</p>
        </div>
        
        <div class="glass-effect rounded-2xl p-6 text-center hover:bg-white/40 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 slide-up" style="animation-delay: 0.1s;">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-xl">
            <i class="ri-price-tag-3-line text-white text-2xl"></i>
          </div>
          <h3 class="font-bold text-white text-lg mb-2">Best Prices</h3>
          <p class="text-white/80 text-sm">Competitive pricing with exclusive member discounts</p>
        </div>
        
        <div class="glass-effect rounded-2xl p-6 text-center hover:bg-white/40 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 slide-up" style="animation-delay: 0.2s;">
          <div class="w-16 h-16 bg-gradient-to-br from-pink-500 to-pink-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-xl">
            <i class="ri-rocket-line text-white text-2xl"></i>
          </div>
          <h3 class="font-bold text-white text-lg mb-2">Fast Delivery</h3>
          <p class="text-white/80 text-sm">Express worldwide shipping with tracking</p>
        </div>
      </div>

    </div>
  </div>

  <script>
    function scrollToLogin() {
      document.getElementById('login-card').scrollIntoView({ 
        behavior: 'smooth', 
        block: 'center' 
      });
    }
    
    function scrollToRegister() {
      window.scrollTo({ 
        top: 0, 
        behavior: 'smooth' 
      });
    }

    // Auto-hide error messages
    setTimeout(() => {
      const errorMsg = document.querySelector('.fixed.top-4');
      if (errorMsg) {
        errorMsg.style.opacity = '0';
        errorMsg.style.transform = 'translateX(-50%) translateY(-20px)';
        setTimeout(() => errorMsg.remove(), 300);
      }
    }, 5000);
  </script>

</body>
</html>